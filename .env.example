# Copy to .env, adjust optional overrides, then run `python scripts/bootstrap.py`
# The script will generate FusionAuth secrets and update kickstart/kickstart.json.

# Core service settings (optional overrides)
FUSIONAUTH_BASE_URL=http://fusionauth:9011
FUSIONAUTH_APPLICATION_NAME=SnapAuth
FUSIONAUTH_AUTHORIZED_REDIRECT_URLS=http://localhost:3000/oauth-callback
FUSIONAUTH_APP_MEMORY=512M
FUSIONAUTH_APP_RUNTIME_MODE=production
SNAPAUTH_SERVICE_PORT=8080
FUSIONAUTH_ADMIN_USERNAME=admin
# FUSIONAUTH_ADMIN_PASSWORD= # uncomment to supply a custom admin password
FUSIONAUTH_ADMIN_APPLICATION_ID=3c219e58-ed0e-4b18-ad48-f4f92793ae32
# FUSIONAUTH_ADMIN_USER_ID= # optional override for the bootstrap-created admin user id

# Database container configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=fusionauth
DB_USER=fusionauth
DB_PASSWORD=
